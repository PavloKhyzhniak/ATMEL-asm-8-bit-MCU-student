;Формула данной задержки
;(3*R20+5)*R19+10
; R20=165
; r19 =0 128010 тактов
; r19 =1 510 тактов
; r19 =2 1010 татов
Delay:
	push r20
loop0:
	ldi r20,0xA5
loop1:
	dec r20
	brne loop1
	nop
	nop
	dec r19
	brne loop0

	pop r20
	ret

;************************************
;Небольшая задержка в 500 тактов
;Формула 12+4*R16
;При 122 задержка в 500 тактов что соответствует 0,5мсек при 1Мгц
DelaySmall:
		push r16
		ldi r16, 122
delay_loop:
		nop
		dec r16
		brne delay_loop
		nop
		pop r16
		ret

